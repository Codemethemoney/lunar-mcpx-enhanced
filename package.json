    "ws": "^8.18.3",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/garyoleary/lunar-mcpx-enhanced.git"
